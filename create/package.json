{
  "name": "create-nextjs-starter-kit",
  "version": "0.0.2",
  "description": "Create Next.js project with strong lint rules and useful tools",
  "scripts": {
    "dev": "pnpm build && node ./bin/index.js",
    "copy": "mkdir -p ./bin/project && rsync -avh --exclude 'node_modules' --exclude '.next' --exclude '.turbo' --exclude '.DS_Store' --exclude 'next.env.d.ts' --exclude 'tsconfig.tsbuildinfo' ../project/ ./bin/project",
    "build": "pnpm copy && pnpm ncc build ./index.ts -o ./bin/ -C -m --no-source-map-register",
    "test": "pnpm vitest run",
    "global-link": "pnpm build && pnpm link --global",
    "test:util": "pnpm vitest run ./test/util",
    "lint": "pnpm eslint ."
  },
  "dependencies": {
    "@vercel/ncc": "^0.38.1",
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^8.9.0",
    "@types/node": "^22.5.1",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unicorn": "^54.0.0",
    "husky": "^8.0.0",
    "prettier": "^3.3.3",
    "prettier-plugin-sort-json": "^4.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "bin": {
    "create-nextjs-starter-kit": "./bin/index.js"
  },
  "engines": {
    "node": "20",
    "pnpm": "9"
  },
  "author": "iwannaberealnerd",
  "packageManager": "pnpm@9.9.0+sha256.7a4261e50d9a44d9240baf6c9d6e10089dcf0a79d0007f2a26985a6927324177"
}
